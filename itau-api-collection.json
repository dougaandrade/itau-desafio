{
  "info": {
    "_postman_id": "itau-api-collection",
    "name": "Itau API",
    "description": "Coleção de endpoints da API Itau",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"usuario\",\n  \"password\": \"senha123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth",
              "host": ["{{baseUrl}}"],
              "path": ["auth"]
            },
            "description": "Autenticar usuário e obter token JWT"
          },
          "response": []
        },
        {
          "name": "Criar Usuário",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"novo_usuario\",\n  \"password\": \"senha123\",\n  \"role\": \"ROLE_USER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/create_user",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "create_user"]
            },
            "description": "Criar novo usuário. Roles disponíveis: ROLE_USER, ROLE_ADMIN"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Transações",
      "item": [
        {
          "name": "Criar Transação",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"valor\": 150.50,\n  \"dataHora\": \"06/02/2026 14:30\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/transacao",
              "host": ["{{baseUrl}}"],
              "path": ["transacao"]
            },
            "description": "Criar uma nova transação para o usuário autenticado"
          },
          "response": []
        },
        {
          "name": "Listar Transações",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/transacao",
              "host": ["{{baseUrl}}"],
              "path": ["transacao"]
            },
            "description": "Retorna todas as transações do usuário autenticado. NOTA: Somente transações do usuário autenticado são retornadas."
          },
          "response": []
        },
        {
          "name": "Buscar Transação por ID",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/transacao/1",
              "host": ["{{baseUrl}}"],
              "path": ["transacao", "1"]
            },
            "description": "Retorna uma transação específica pelo ID"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Estatísticas",
      "item": [
        {
          "name": "Obter Estatísticas",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/estatistica",
              "host": ["{{baseUrl}}"],
              "path": ["estatistica"]
            },
            "description": "Retorna estatísticas das transações do usuário autenticado. NOTA: Apenas transações do usuário autenticado são incluídas no cálculo."
          },
          "response": []
        }
      ]
    }
  ]
}
